<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Calories Management</display-name>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/WEB-INF/jsp/exceptionNumberFormat.jsp</location>
    </error-page>


    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.MealServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>mealsList</servlet-name>
        <jsp-file>/WEB-INF/jsp/meals.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>editMeal</servlet-name>
        <jsp-file>/WEB-INF/jsp/editMeal.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>addMeal</servlet-name>
        <jsp-file>/WEB-INF/jsp/addMeal.jsp</jsp-file>
    </servlet>


    <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/topjava/mealServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mealsList</servlet-name>
        <url-pattern>/topjava/meals.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>editMeal</servlet-name>
        <url-pattern>/topjava/editMeal.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addMeal</servlet-name>
        <url-pattern>/topjava/addMeal.jsp</url-pattern>
    </servlet-mapping>
</web-app>